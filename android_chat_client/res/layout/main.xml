<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/wrapperLayout">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/formLayout">
        <EditText android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="wrap_content" android:id="@+id/messageEditText" android:inputType="text">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/sendButton" android:text="Send"></Button>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:id="@+id/scrollView" android:layout_height="match_parent">
        <TextView android:layout_width="match_parent" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/logsTextView" android:layout_height="wrap_content"></TextView>
    </ScrollView>
</LinearLayout>
